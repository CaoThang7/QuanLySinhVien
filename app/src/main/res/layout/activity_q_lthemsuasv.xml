<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AnhManHinh2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QLthemsuasvActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF33"
        android:text="QUẢN LÍ SINH VIÊN"
        android:textSize="38dp"
        android:textStyle="bold"
        android:gravity="center"
        />




    <TextView
        android:id="@+id/nhapten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#E0E0E0"
        android:layout_marginTop="20dp"
        android:text="Tên SV:" />

    <EditText
        android:id="@+id/txtMaLop"
        android:layout_height="50dp"
        android:layout_width="300dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-42dp"
        android:ems="10"
        android:hint="Nhâp họ tên "
        android:background="#FFFFFF"
        android:textColor="#C8C8C8"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#E0E0E0"
        android:layout_marginTop="20dp"
        android:text="Ngày Sinh:" />

    <EditText
        android:id="@+id/txtTenLop"
        android:layout_height="50dp"
        android:layout_width="250dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-42dp"
        android:ems="10"
        android:hint="Chọn ngày "
        android:background="#FFFFFF"
        android:textColor="#C8C8C8"
        android:inputType="textPersonName"
        android:text="" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnInsert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:background="#CCFF00"
            android:text="Thêm sinh viên " />

<!--        <Button-->
<!--            android:id="@+id/btnHuy"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="10dp"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:layout_weight="1"-->
<!--            android:background="#CCFF00"-->
<!--            android:text="Sửa sinh viên " />-->

<!--        />-->


    </LinearLayout>
    <ListView
        android:id="@+id/lvLopHoc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        >

    </ListView>

</LinearLayout>