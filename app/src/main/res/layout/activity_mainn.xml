<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ManHinh"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainnActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="50dp"
        android:text="Trang chủ"
        android:textStyle="bold"
        android:textColor="#FDF903"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/anhgif2" />
    <ImageButton
        android:id="@+id/imagebutton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:background="@drawable/chienbinh"
        android:scaleType="fitCenter"
        android:src="@drawable/chienbinh" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUẢN LÍ SV"
        android:layout_gravity="right"
        android:textSize="20dp"
        android:textColor="#FFFF66"
        android:textStyle="bold"
        android:layout_marginRight="22dp"
        />


    <ImageButton
        android:id="@+id/thang"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-178dp"
        android:adjustViewBounds="true"
        android:background="@drawable/ironman"
        android:scaleType="fitCenter"
        android:src="@drawable/ironman" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="QUẢN LÍ LỚP"
        android:textColor="#FFFF66"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"/>

    <ImageButton
        android:id="@+id/dangxuat"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:background="@drawable/icon"
        android:scaleType="fitCenter"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Đăng Xuất "
        android:textStyle="bold"
        android:textColor="#FFFF66"
        android:layout_marginLeft="42dp"/>


    <ImageButton
        android:id="@+id/doimatkhau"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="242dp"
        android:layout_marginTop="-175dp"
        android:adjustViewBounds="true"
        android:background="@drawable/icon2"
        android:scaleType="fitCenter"
        android:src="@drawable/icon2" />


    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Đổi mật khẩu "
        android:textStyle="bold"
        android:textColor="#FFFF66"
        android:layout_marginLeft="250dp"/>



</LinearLayout>